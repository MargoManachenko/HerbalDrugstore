@model IEnumerable<HerbalDrugstore.Models.SuppliersChart>

@{
    ViewData["Title"] = "SuppliersStatistic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Suppliers rating chart</h2>


<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Supplier.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Supplier.Country)
        </th>
        <th>
            Quanntity of supplies
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quanntity)
            </td>
           
        </tr>
    }
    </tbody>
</table>
<style>
    th {
        text-align: center;
    }

    h1, h2, h3, p, tr, td {
        color: white;
    }
</style>

