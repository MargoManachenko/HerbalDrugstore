@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model MakeBigOrderViewModel
@{
    ViewData["Title"] = "MakeBigOrder";
}

<br/>
<form asp-action="">
    <div class="form-horizontal">
        <label class="col-md-2 control-label">Supplier : @Model.SupplierName</label><br/>
        @*<select class="form-control" name="supplierId">
            @foreach (var item in Model.SuppliresCompanies)
            {
                if (item == Model.SupplierName)
                {
                    <option selected value="111"></option>
                }
                else
                {
                    <option value="@Model.SupplierName"></option>

                }
