        <hr>
        @foreach (var drug in Model.DrugStatisticses)
        {
            <div class="form-horizontal">
                <label class="col-md-2 control-label">Drug</label>
                <input value="@drug.DrugName" class="form-control"/>
            </div>
            <br/>
            <div class="form-group">
                <label class="col-md-2 control-label">Quanyity</label>
                <div class="col-md-10">
                    <input value="@drug.Recomended" type="number" name="quantity" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Price $</label>
                <div class="col-md-10">
                    <input value="@drug.DrugPrice" type="number" step="0.01" name="price" class="form-control"/>
                </div>
            </div>
            <hr>
        }

        <input class="btn btn-default" value="Add drug"/>
        <input type="submit" class="btn btn-default" value="Next"/>

    </div>
</form>
